pipeline {
    agent {
        docker { image 'node:18.15-alpine' }
    }
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
                withCredentials([file(credentialsId: 'env-vars-zoo-api', variable: 'env-file')]) {
                    sh "cp \$env-file ./.env"
                }
                sh 'ls'
            }
        }
        stage('Test') {
            steps {
                sh 'npm t'
            }
        }
    }
}